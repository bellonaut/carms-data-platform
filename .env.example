# PostgreSQL database name for the local Docker service.
POSTGRES_DB=carms

# PostgreSQL username for local development.
POSTGRES_USER=carms_app

# PostgreSQL password for local development.
POSTGRES_PASSWORD=carms_secret

# SQLAlchemy connection string used by Dagster and FastAPI.
DB_URL=postgresql+psycopg2://carms_app:carms_secret@postgres:5432/carms

# Application environment name.
ENV=local

# Dagster GraphQL endpoint used by the /pipeline/run API route.
DAGSTER_GRAPHQL_URL=http://dagster:3000/graphql

# Dagster home directory inside containers.
DAGSTER_HOME=/app/.dagster

# Host port mapping for FastAPI in docker-compose.
API_PORT=8000

# Host port for Dagster UI (used by demo scripts).
DAGSTER_PORT=3000

# Optional API key required by FastAPI dependencies (leave blank to disable).
API_KEY=

# Max requests allowed in each rate-limiting window.
RATE_LIMIT_REQUESTS=120

# Rate-limiting window size in seconds.
RATE_LIMIT_WINDOW_SEC=60

# Optional OpenAI key for LangChain-backed semantic answer generation.
OPENAI_API_KEY=

# Optional path override for the saved preference model artifact.
PREFERENCE_ARTIFACT_PATH=
